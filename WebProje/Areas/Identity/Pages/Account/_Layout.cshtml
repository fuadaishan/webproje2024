<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - WebProje</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/utils.css" asp-append-version="true"/>
    @* <link rel="stylesheet" href="~/WebProje.styles.css" asp-append-version="true"/> *@
</head>
<body>
<div style="background-color: #152733; width: 100vw; height: 100vh; overflow: hidden">
    <div class="display-flex align-items-center justify-content-center">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6 p-5 text-white">
                <h2>@__.GetKey("Welcome")</h2>
                @RenderBody()
            </div>
            <div class="col-sm-3"></div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>