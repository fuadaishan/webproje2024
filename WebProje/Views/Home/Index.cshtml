                    <div class="row">
                        <div class="col-12 col-lg-6 p-4 p-lg-5 d-flex justify-content-lg-start">
                            <div>
                                @__.GetKey("Slogan")
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 p-4 p-lg-5 d-flex justify-content-lg-end">
                            <div class="d-flex align-items-end">
                                <a href="#docs" class="btn btn-primary rounded-pill">
