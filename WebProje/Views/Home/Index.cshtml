</div>

<div id="docs" class="row mt-5 p-3">
    <!-- Filters -->
    <div class="col-md-3">
        <h5>@__.GetKey("Filters")</h5>
        <form>
            <div class="form-group">
                <label for="hospitalsFilter">@__.GetKey("Hospital"):</label>
                <select class="form-control" id="hospitalsFilter">
                  
                </select>
            </div>
            <div class="form-group">
                <label for="specialitiesFilter">@__.GetKey("Speciality"):</label>
                <select class="form-control" id="specialitiesFilter">
                 
                </select>
            </div>
            <div class="form-group">
                <label for="clinicsFilter">@__.GetKey("Clinic"):</label>
                <select class="form-control" id="clinicsFilter">
                  
                </select>
            </div>
        </form>
    </div>

    <!-- Doctor List -->
    <div class="col-md-9">
        <h5>@__.GetKey("DoctorList")</h5>
        <div class="row" id="doctorsList">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/filters.js"></script>
    <script src="~/js/HomePage.js"></script>
}
