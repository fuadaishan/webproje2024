@{
    string pathLast = Context.Request.Path.ToString().Split('/').Last();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - WebProje</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/utils.css" asp-append-version="true"/>
</head>
<body>
<div class="container-fluid">
    <div class="row p-0 flex-nowrap overflow-hidden">
        <div class="position-fixed fixed-top bg-dark w-25 min-vh-100 d-none d-md-block p-0">
            <div class="bg-dark p-2">
                <a href="" class="d-flex text-decoration-none align-items-center text-white mb-3">
                    <span class="fs-4 d-none d-sm-inline">SideMenu</span>
                </a>
                <ul class="nav nav-pills flex-column" id="menu">
                    <li class="nav-item text-white">
                        <a href="#hospitals" class="nav-link text-white mb-2 @(pathLast.Contains("Hospital") ? "active" : "")" data-bs-toggle="collapse">
                            <span class="ms-1 fs-4">Bareber shops</span>
                        </a>
                        <ul class="nav flex-column ms-2 @(pathLast.Contains("Hospital") ? "" : "collapse")" id="hospitals" data-bs-target="#menu">
                            <li class="nav-item">
                                <a asp-controller="Admin" asp-action="CreateHospital" class="nav-link text-white @(pathLast == "CreateHospital" ? "active" : "")">
                                    Create
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Admin" asp-action="ListHospitals" class="nav-link text-white @(pathLast == "ListHospitals" ? "active" : "")">
                                    List
